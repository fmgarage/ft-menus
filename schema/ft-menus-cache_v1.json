{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"id": "https://fmgarage.com/schemas/ft-menus-cache_v1.json",
	"title": "ft-menus cache schema",
	"description": "this schema explains the structure of the cache json",
	"type": "object",
	"properties": {
		"language": {
			"title": "Global Language Default",
			"description": "",
			"type": "string"
		},
		"variant": {
			"title": "Global Variant Default",
			"description": "",
			"type": "string"
		},
		"windows": {
			"title": "Windows",
			"description": "",
			"type": "object",
			"additionalProperties": {
				"$comment": "properties are window names",
				"$ref": "#/$defs/window"
			}
		},
		"paths": {
			"type": "object",
			"additionalProperties": {
				"$comment": "properties are menu names",
				"type": "object",
				"additionalProperties": {
					"$comment": "properties are variants",
					"type": "object",
					"additionalProperties": {
						"$comment": "properties are paths (e.g. persons-list)",
						"type": "array",
						"items": {
							"type": 
						}
					}
				}
			}
		}
	},
	"additionalProperties": false,
	"$defs": {
		"window": {
			"description": "",
			"type": "object",
			"properties": {
				"language": {
					"title": "Window Language Default",
					"type": "string"
				},
				"variant": {
					"title": "Window Variant Default",
					"type": "string"
				},
				"menus": {
					"title": "Menus",
					"type": "object",
					"additionalProperties": {
						"$comment": "properties are menu names",
						"$ref": "#/$defs/menu"
					}
				}
			}
		},
		"menu": {
			"properties": {
				"count": {
					"type": "integer"
				},
				"isCurrent": {
					"type": "integer",
					"$comment": "not boolean like the name suggests"
				},
				"label": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"target": {
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "null"
							},
							{
								"$ref": "#/$defs/target"
							}
						]
					}
				},
				"items": {
					"type": "array",
					"items": {
						"oneOf": [
							{
								"type": "null"
							},
							{
								"$ref": "#/$defs/menu"
							}
						]
					}
				}
			}
		},
		"target": {
			"title": "Target Definition",
			"type": "object",
			"properties": {
				"class": {
					"type": "string"
				},
				"file": {
					"type": "string"
				},
				"layout": {
					"title": "Layout name or id",
					"type": "string"
				},
				"objects": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"script": {
					"type": "object",
					"properties": {
						"name": { "type": "string" },
						"id": { "type": "string" }
					}
				},
				"view": {
					"type": "string"
				},
				"window": {
					"type": "object",
					"properties": {
						"adjust": {
							"type": "string",
							"enum": ["resize", "minimize", "maximize"]
						},
						"name": {
							"title": "Target Window Name",
							"type": "string"
						}
					}
				}
			},
			"additionalProperties": false
		}
	}
}	
		
