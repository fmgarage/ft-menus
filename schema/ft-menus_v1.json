{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"id": "https://fmgarage.com/schemas/ft-menus_v1.json",
	"title": "ft-menus config schema",
	"description": "",
	"type": "object",
	"properties": {
		"languages": {
			"title": "Languages",
			"description": "Available languages, fist one is used as fallback",
			"type": "array",
			"minItems": 1,
			"items": {"$ref": "#/definitions/language"}
		},
		"variants": {
		},
		"menus": {
			"title": "Menus",
			"additionalProperties": {"$ref": "#/definitions/menu"}
		}
	},
	"additionalProperties": false,
	"definitions": {
		"label": {
			"titel": "Label",
			"oneOf": [
				{
					"title": "Single Language",
					"type": "string"
				},
				{
					"title": "Object with defined languaged",
					"type": "object",
					"additionalProperties": { "type": "string" }
				}
			]
		},
		"language": {
			"title": "Language code (e.g. en, de, fr, ...)",
			"type": "string",
			"minLength": 2,
			"maxLength": 2
		},
		"menu": {
			"type": "object",
			"properties": {
				"label": "{$ref": "#/definitions/label",
				"target": {},
				"default": {
					"title": "Default Menu Item"
				},
				"names": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "string"
					}
				},
				"items": {"$ref": "#/defnitions/menu"}
			},
			"additionalProperties": false
		},
		"target": {
			"title": "Target",
			"desciption": "Target for naviation, script, etc.",
			"type": "object",
			"properties": {
				"file": {
					"title": "External File name",
					"type": "string"
				},
				"view": {
					"
					"type": "string",
					"default": "restore"
				},
				"layout": {},
				"window": {
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"enum": ["card"],
						},
						"dim": {
							"type": "boolean",
							"default": true
						},
						"position": {
							"type": "object",
							"properties": {
								"x": {"$ref": "#/definitions/posXY"},
								"y": {"$ref": "#/definitions/posXY"},
								"w": {"$ref": "#/definitions/posWH"},
								"h": {"$ref": "#/definitions/posWH"}
							},
							"additionalProperties": false
						},
						"objects": {
							"title": "Layout Objects",
							"description": "Layout object names in their order of activation",
							"type": "array",
							"minItems": 1,
							"items": {
								"type": "string"
							}
						}
					}
				}
			}
		},
		"posXY": {
			"type": "integer",
			"minimum": 0
		},
		"posWH": {
			"type": "integer",
			"minimum": 0
		},
		"additionalProperties": false
	}
}	
		
